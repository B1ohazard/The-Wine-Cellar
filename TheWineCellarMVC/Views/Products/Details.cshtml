@model TheWineCellarMVC.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Product Information</h1>

<div>
    <h4>Product</h4>
    <div id="productCard" class="card">
        <div id="productCard" class="container" style="background-color: transparent;">
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductDescription)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductPrice)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductQuantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductQuantity)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductImage)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductImage)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Date)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FarmerEmail)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FarmerEmail)
                </dd>
            </dl>
        </div>
        <div>
            <a class="btn btn-sm" asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a>
            <a class="btn btn-sm" asp-action="Index">Back to List</a>
        </div>
    </div>
