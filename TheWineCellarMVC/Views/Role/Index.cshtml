@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}

<h1>All Roles</h1>
<p>
    <a asp-action="Create" class="btn btn-secondary mainbuttons">Create a Role</a>
</p>

<div id="productCard" class="card">
    <div id="productCard" class="container" style="background-color: transparent;">
        <table class="table table-sm table-bordered table-bordered">
            <tr><th>Role Name</th><th>View Users & Update</th><th>Delete</th></tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
